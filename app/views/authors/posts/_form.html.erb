<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form post</title>
  <style>
    .btn.btn-primary.btn-block
    {
      background-color: #2089dd
    }
  </style>
</head>
<body>
  <%= form_with(model: post) do |form| %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
      <%= form.error_for :title, class: 'text-danger' %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
      <%= form.error_for :description, class: 'text-danger' %>
    </div>

    <div class="form-group">
      <%= form.label :header_image %>
      <%= form.file_field :header_image %>
      <div class="mt-1">
        <small>Current image:</small>
        <% if post.header_image.present? %>
          <%= image_tag(post.header_image, width: '100%') %>
        <% end %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</body>
</html>